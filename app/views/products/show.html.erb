<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

    <%= form_for([@product, @product.reviews.build]) do |f| %>
      <h4>Add Review:</h4>
      <div class="form-group">
      <ul>
          <li>
            <%= f.label :rating %>
            <%= f.select :rating, [1, 2, 3, 4, 5], class: 'form-control' %>   
            <%= f.label :description %>
            <%= f.text_field :description %>
            <%= f.submit 'Submit Review', class: 'btn btn-primary', data: {disable_with: "Submitting..."}%>
          </li>
      </ul>
      </div>
    <% end %>
  
  </article>
  
  <h4>Reviews</h4>
  <% @reviews.each do | review | %>
    <%= render 'review', rating: review.rating, user_id: review.user_id, description: review.description %>
  <% end %>

</section>
